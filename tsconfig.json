{
  "compilerOptions": {
    "baseUrl": ".",
    "types": ["node", "mocha"],
    "paths": {
      "*": [
        "src/app/*",
        "src/app/redux/*",
        "src/server/*"
      ]
    },
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "experimentalDecorators": true,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "build",
    "typings/main",
    "typings/main.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "useCache": true,
    "useBabel": true
  }
}
